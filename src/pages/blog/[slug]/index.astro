---
import './style.css';
import Layout from "../../../layouts/Layout.astro";
import Aside from '../../../components/Aside.svelte';
import type { Heading } from '../../../types/blog';


export async function getStaticPaths() {
    const posts = await Astro.glob('../../../posts/*.md');
    return posts.map(post => {
        return {
            params: {
                slug: post.frontmatter.slug
            },
            props: {
                post
            }
        }
    });
}

const { Content, frontmatter, getHeadings } = Astro.props.post;

const headings: Heading[] = getHeadings();
---

<Layout title={frontmatter.title} type="blog" description={frontmatter.preview}>
    <main id="main">

        <article>
            <section id="info">
                <h1 id="article-title">{frontmatter.title}</h1>
                <p>{new Date(frontmatter.date).toLocaleDateString()}</p>
                <p>{frontmatter.author}</p>
                <a href="/blog">Get out of here</a>
            </section>
        
            <Content />
        </article>

        <Aside headings={headings} frontmatter={frontmatter} client:load />
    </main>
</Layout>


<style>
    main {
        display: flex;
        gap: 1em;
        margin: 0 auto;        
        max-width: 1200px;
        height: 100%;
    }
     

    article {
        height: 100%;
        padding: 1em;
        display: grid;
        gap: .75rem;
    }


    pre {
        overflow: scroll;
    }

    img {
        max-height: 100px;
    }
</style>